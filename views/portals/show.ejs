<% layout('layouts/boilerplate')%>

<div class="row">
    <div class="d-flex justify-content-center mb-3">
        <a class="btn btn-success text-center btn-lg" href="/portals/<%= id %>/newquestion">New</a>
    </div>

</div>

<% for(question of questions.question){ %>
    <div class="card mb-3 text-white bg-dark mb-3">
        <img src="http://localhost:3000/<%= question.questionLoc %>" class="card-img-top img-fluid">
        <div class="card-body">
          <h6 class="card-title"><%= question.question %> </h6>

          <form action="/optionclicked/<%= question._id%>" method="POST">
            <div class="form-check">
              <input class="form-check-input" type="radio" name="type" id="flexRadioDefault1" value="a" >
              <label class="form-check-label" for="flexRadioDefault1">
                A : <%= question.opa %> Votes 
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="type" id="flexRadioDefault2" value="b">
              <label class="form-check-label" for="flexRadioDefault2">
                B : <%= question.opb %> Votes 
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="type" id="flexRadioDefault1" value="c" >
              <label class="form-check-label" for="flexRadioDefault1">
                C : <%= question.opc %> Votes 
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="type" id="flexRadioDefault2" value="d">
              <label class="form-check-label" for="flexRadioDefault2">
                D : <%= question.opd %> Votes 
              </label>
            </div>  
            <div class="mb-3">
              <button class="btn btn-success">Submit Answer</button>
            </div>
          </form>
          
        </div>
      </div>
<%}%>